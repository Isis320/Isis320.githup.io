  <script>
    function mostrarSeccion(id) {
      document.querySelectorAll('.seccion').forEach(seccion => seccion.classList.remove('activa'));
      document.getElementById(id).classList.add('activa');

      if (id === 'seccion1') {
        document.body.style.background = 'linear-gradient(-45deg, #fef3f3, #e0f7fa, #e7ffe7, #fff0db)';
      } else if (id === 'seccion2') {
        document.body.style.backgroundColor = '#fcdde1';
      } else if (id === 'seccion3') {
        document.body.style.backgroundColor = '#d2f8d2';
      } else if (id === 'seccion4') {
        document.body.style.backgroundColor = '#ffe4e1';
      } else if (id === 'seccion5') {
        document.body.style.backgroundColor = '#ffe4e1';
      }
    }
  </script>

